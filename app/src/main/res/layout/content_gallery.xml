<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_raw"
        style="@style/DefaultTextView"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dimen_standard"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Raw food's name (e.g : Potato)" />

    <TextView
        android:id="@+id/tv_prediction_value"
        style="@style/DefaultTextView"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dimen_super_small"
        android:layout_marginEnd="@dimen/dimen_standard"
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_raw"
        android:text="Prediction: 0.445453435" />

    <TextView
        android:id="@+id/tv_description_title"
        style="@style/DefaultTextView"
        android:layout_marginTop="@dimen/dimen_standard"
        android:text="description"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_prediction_value" />

    <TextView
        android:id="@+id/tv_description_raw"
        style="@style/DefaultTextView"
        android:layout_width="0dp"

        android:text="this is the description of the raw food"
        android:layout_marginTop="@dimen/dimen_super_small"
        android:textColor="@color/primaryTextColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description_title" />

    <TextView
        android:id="@+id/tv_products_title"
        style="@style/DefaultTextView"
        android:layout_marginTop="@dimen/dimen_standard"
        android:text="product"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_raw" />

</androidx.constraintlayout.widget.ConstraintLayout>